PROCEDURE "ST_MARK_AS_OBSOLETE"(
    -- giving the input
    IN IN_ASSESSMENTID NVARCHAR(36),
    IN IN_REASONCOMMENT NVARCHAR(50)
) 
  LANGUAGE SQLSCRIPT 
  SQL SECURITY INVOKER AS 
BEGIN

    -- update the assessment table with flag and comment
    UPDATE btp_c_Assessments
    SET IsObsolete = TRUE, ReasonComment = :IN_REASONCOMMENT
    WHERE ID= :IN_ASSESSMENTID;
END;